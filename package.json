{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:coverage": "nyc --clean npm run test",
    "test:lint": "eslint src tests",
    "test:unit": "NODE_ENV=test mocha tests/unit --recursive",
    "test:unit-coverage": "nyc --clean -x src/routes -x src/server -x src/index.js npm run test:unit",
    "test:integration": "NODE_ENV=test mocha tests/integration --recursive",
    "test:integration-coverage": "nyc --clean npm run test:integration",
    "test:load": "NODE_ENV=test npm start & artillery run tests/load/script.yml",
    "start": "node src/index.js"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^5.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "husky": "^3.0.8",
    "swagger-ui-express": "^4.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "artillery": "^1.6.0-29",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": [
      "airbnb-base",
      "plugin:security/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "arrow-body-style": "off",
      "no-unused-expressions": "off"
    },
    "plugins": [
      "security",
      "import"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "reporter": [
      "text",
      "text-summary"
    ],
    "all": true,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/index.js",
      "src/server/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:lint && npm run test:coverage"
    }
  }
}
