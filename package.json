{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_ENV=test mocha tests --recursive",
    "test:coverage": "nyc npm run test",
    "test:lint": "eslint src tests",
    "start": "node src/index.js"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^5.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "husky": "^3.0.8",
    "swagger-ui-express": "^4.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": [
      "airbnb-base",
      "plugin:security/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "arrow-body-style": "off"
    },
    "plugins": [
      "security",
      "import"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "reporter": [
      "text",
      "text-summary"
    ],
    "all": true,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/index.js",
      "src/server/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:coverage"
    }
  }
}
